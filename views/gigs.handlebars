<section id="gigs" class="container">
    <h1>All Gigs</h1>

    {{!-- To loop through the gigs passed in. --}}
    {{#each gigs}}
    <div class="gig">
      <h3>{{title}}</h3>
      <p>{{description}}</p>
      <ul>
        <li>Budget: {{budget}}</li>
        <li><a href="mailto:{{contact_email}}" class="btn btn-reverse">Apply Now</a></li>
      </ul>
      <div class="tech">
        <small>Technologies Needed: <span>{{technologies}}</span></small>
      </div>
    </div>
    {{!-- If there are no gigs in the database,
     notify the user with the else statement. --}}
    {{else}}
    <p>No gigs available</p>
    {{/each}}
  
</section>